@using BankOfSimba.Models;
@using System.Collections.Generic;

@model List<BankAccount>;


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <html>
    <head>
        <link rel="stylesheet" href="~/css/StyleSheet.css" />
    </head>
    <body>
    <h2>Show All Accounts</h2>
        <table>
            <thead>
                <tr>
                    <th>Account Nr.:</th>
                    <th>Account Name:</th>
                    <th>Account Balance:</th>
                    <th>Account Animal Type:</th>
                    <th>Is King: </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < @Model.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Balance.ToString("0.00")</td>
                        <td>@Model[i].AnimalType</td>
                        <td>@Model[i].IsKing()</td>
                        <td><form action="/RaiseFunds" method="get"><button name="index" value="@i">Raise Funds!</button></form></td>
                    </tr>
                }
            </tbody>
        </table>
                <hr />
        <h3>Register New Account</h3>
                <div id="newaccount">
                    <form action="/CreateAccount" method="post">
                        <label for="name">New Name: </label>
                        <input type="text" name="name" />
                        <label for="balance">Initial Balance: </label>
                        <input type="text" name="balance" />
                        <label for="animaltype">Animal Type: </label>
                        <input type="text" name="animaltype" />
                        <button type="submit">Register New Account</button>
                    </form>
                </div>
    </body>
    </html>